<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- AR Camera View -->
    <android.opengl.GLSurfaceView
        android:id="@+id/surfaceView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Top instruction text -->
    <TextView
        android:id="@+id/tvInstruction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="32dp"
        android:background="#80000000"
        android:padding="16dp"
        android:text="Enter starting point name below"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

    <!-- Recording Status -->
    <TextView
        android:id="@+id/tvRecordingStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp"
        android:background="#CCFF0000"
        android:padding="12dp"
        android:text="● RECORDING"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="gone" />

    <!-- Bottom control panel -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="#DD000000"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Starting Point Input (visible before recording) -->
        <LinearLayout
            android:id="@+id/layoutStartPoint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="📍 Starting Point"
                android:textColor="#FFD700"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/etStartPoint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter start location (e.g., Main Gate)"
                android:textColor="@android:color/white"
                android:textColorHint="#AAAAAA"
                android:background="@android:color/darker_gray"
                android:padding="12dp"
                android:inputType="text"
                android:imeOptions="actionDone" />

            <Button
                android:id="@+id/btnStartRecording"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="🎬 Start Path Recording"
                android:textSize="18sp"
                android:layout_marginTop="12dp" />
        </LinearLayout>

        <!-- Destination Input (visible during/after recording) -->
        <LinearLayout
            android:id="@+id/layoutDestination"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/tvPathInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Walk slowly towards destination..."
                android:textColor="#00FF00"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_marginBottom="12dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="🎯 Destination"
                android:textColor="#FFD700"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/etDestination"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter destination (e.g., Library)"
                android:textColor="@android:color/white"
                android:textColorHint="#AAAAAA"
                android:background="@android:color/darker_gray"
                android:padding="12dp"
                android:inputType="text"
                android:imeOptions="actionDone" />

            <Button
                android:id="@+id/btnStopRecording"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="⏹ Stop & Save Path"
                android:textSize="18sp"
                android:layout_marginTop="12dp" />
        </LinearLayout>

        <!-- Waypoint counter -->
        <TextView
            android:id="@+id/tvWaypointCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Waypoints recorded: 0"
            android:textColor="@android:color/white"
            android:layout_marginTop="8dp"
            android:layout_gravity="center"
            android:visibility="gone" />
    </LinearLayout>

</FrameLayout>